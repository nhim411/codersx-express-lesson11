extends ../layouts/common.pug

block content
  h1 Users Manager
  hr
  ul
    each user in users
      li
        span= user.name
        span &nbsp;
        a(href='/users/update/'+user.id) update
        span &nbsp;
        a(href='/users/delete/'+user.id) delete
  hr
  h4 Add new user
  form(action="/users/create", method="POST")
    label name:&nbsp;
    input(type="text", name="name")
    span &nbsp;
    button(class="btn btn-primary") Create
      
  